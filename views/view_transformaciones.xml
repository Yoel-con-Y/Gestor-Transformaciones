<odoo>
    <!-- Submenú para Ver las Transformaciones -->
    <menuitem id="menu_transformaciones_model"
              name="Transformaciones"
              parent="menu_personaje_model"
              sequence="2" />

    <!-- Acción para Mostrar las Transformaciones -->
    <record id="action_transformaciones_model" model="ir.actions.act_window">
        <field name="name">Gestión de transformaciones</field>
        <field name="res_model">dragon_ball.transformaciones</field> <!-- El modelo que controla las transformaciones -->
        <field name="view_mode">tree,form</field> <!-- Las vistas disponibles para esta acción -->
        <field name="target">current</field>
    </record>

    <!-- Vista Árbol para Transformaciones -->
    <record id="view_transformaciones_tree" model="ir.ui.view">
        <field name="name">dragon_ball.transformaciones.tree</field>
        <field name="model">dragon_ball.transformaciones</field>
        <field name="arch" type="xml">
            <tree string="Transformaciones">
                <field name="nombre"/>
                <field name="descripcion"/>
                <field name="multiplicador"/>
                <field name="requisitos"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario para Transformaciones -->
    <record id="view_transformaciones_form" model="ir.ui.view">
        <field name="name">dragon_ball.transformaciones.form</field> <!-- Nombre único de la vista -->
        <field name="model">dragon_ball.transformaciones</field>
        <field name="arch" type="xml">
            <form string="Transformación">
                <sheet>
                    <group>
                        <field name="nombre" />
                        <field name="descripcion" />
                        <field name="requisitos" />
                        <field name="multiplicador" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
